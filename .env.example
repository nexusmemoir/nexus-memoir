# NexusMemoir Environment Variables
# Copy this file to .env and fill in your values

# Secret key for session encryption (generate a random string)
SECRET_KEY=your-secret-key-here

# Admin password for legacy admin endpoint
ADMIN_PASSWORD=your-admin-password

# Cloudflare R2 Configuration
# Get these from your Cloudflare R2 dashboard
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET=nexusmemoir-media

# Database path (optional, defaults to ./db.sqlite3)
# For Render, use: /var/data/db.sqlite3
DB_PATH=db.sqlite3
